<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Window Action for Subscription Packages - MUST be defined before menu references it -->
    <record id="action_subscription_package" model="ir.actions.act_window">
        <field name="name">Packages</field>
        <field name="res_model">subscription.package</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first subscription package!
            </p>
            <p>
                Define subscription packages for your Kids Club members.
            </p>
        </field>
    </record>

    <!-- Main Menu for Kids Club -->
    <menuitem 
        id="menu_kids_club_main"
        name="Kids Club"
        web_icon="kids_club,static/description/icon.png"
        sequence="10"/>

    <!-- Subscription Packages Menu -->
    <menuitem 
        id="menu_subscription_packages"
        name="Packages"
        parent="menu_kids_club_main"
        action="action_subscription_package"
        sequence="10"/>

    <!-- Parents Menu -->
    <menuitem 
        id="menu_parents"
        name="Parents"
        parent="menu_kids_club_main"
        action="action_partner_kids_club"
        sequence="20"/>

    <!-- Children Menu -->
    <menuitem 
        id="menu_children"
        name="Children"
        parent="menu_kids_club_main"
        action="action_child"
        sequence="30"/>

    <!-- Child Subscriptions Menu -->
    <menuitem 
        id="menu_child_subscriptions"
        name="Subscriptions"
        parent="menu_kids_club_main"
        action="action_child_subscription"
        sequence="40"/>

    <!-- Check-in/Check-out Menu -->
    <menuitem 
        id="menu_kids_checkin_root"
        name="Attendance"
        parent="menu_kids_club_main"
        sequence="50"/>

    <!-- Live Dashboard Menu -->
    <menuitem 
        id="menu_kids_checkin_dashboard"
        name="Live Dashboard"
        parent="menu_kids_checkin_root"
        action="kids_club.action_kids_checkin_dashboard"
        sequence="10"/>

    <!-- Quick Check-in Menu -->
    <menuitem 
        id="menu_kids_quick_checkin"
        name="Quick Check-in"
        parent="menu_kids_checkin_root"
        action="kids_club.action_kids_checkin_wizard"
        sequence="20"/>

    <!-- Check-in History Menu -->
    <menuitem 
        id="menu_kids_checkin_history"
        name="Check-in History"
        parent="menu_kids_checkin_root"
        action="kids_club.action_kids_child_checkin"
        sequence="30"/>

    <!-- Configuration Menu -->
    <menuitem 
        id="menu_kids_club_config"
        name="Configuration"
        parent="menu_kids_club_main"
        sequence="100"/>
</odoo>
