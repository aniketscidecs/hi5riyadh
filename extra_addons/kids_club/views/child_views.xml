<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Child Form View -->
    <record id="view_child_form" model="ir.ui.view">
        <field name="name">kids.child.form</field>
        <field name="model">kids.child</field>
        <field name="arch" type="xml">
            <form string="Child Information">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_subscriptions" type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="subscription_ids" widget="statinfo" string="Subscriptions"/>
                        </button>
                    </div>
                    
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image_medium', 'size': [90, 90]}"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Child's Full Name"/>
                        </h1>
                        <h3>
                            <field name="barcode_id" readonly="1"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="parent_id" options="{'no_create': True}"/>
                            <field name="date_of_birth"/>
                            <field name="age" readonly="1"/>
                            <field name="gender"/>
                            <field name="registration_date"/>
                            <field name="active"/>
                        </group>
                        <group name="barcode_info" string="Identification">
                            <field name="barcode_image" widget="image" options="{'size': [200, 100]}" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Emergency Contact" name="emergency">
                            <group>
                                <group>
                                    <field name="emergency_contact"/>
                                    <field name="emergency_phone"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Medical Information" name="medical">
                            <group>
                                <field name="medical_notes" placeholder="Any medical conditions or special needs..."/>
                                <field name="allergies" placeholder="List any known allergies..."/>
                            </group>
                        </page>
                        
                        <page string="Subscriptions" name="subscriptions">
                            <field name="subscription_ids" readonly="1">
                                <list>
                                    <field name="package_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="state"/>
                                    <field name="payment_status"/>
                                    <field name="price"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Child List View -->
    <record id="view_child_list" model="ir.ui.view">
        <field name="name">kids.child.list</field>
        <field name="model">kids.child</field>
        <field name="arch" type="xml">
            <list string="Children">
                <field name="image_small" widget="image" options="{'size': [40, 40]}"/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="barcode_id"/>
                <field name="registration_date"/>
                <field name="current_subscription_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Child Search View -->
    <record id="view_child_search" model="ir.ui.view">
        <field name="name">kids.child.search</field>
        <field name="model">kids.child</field>
        <field name="arch" type="xml">
            <search string="Search Children">
                <field name="name" string="Child Name"/>
                <field name="parent_id" string="Parent"/>
                <field name="barcode_id" string="Barcode ID"/>
                <field name="age"/>
                
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                
                <separator/>
                <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                
                <separator/>
                <filter string="With Active Subscription" name="active_subscription" 
                        domain="[('current_subscription_id', '!=', False)]"/>
                <filter string="No Active Subscription" name="no_subscription" 
                        domain="[('current_subscription_id', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Parent" name="group_parent" context="{'group_by': 'parent_id'}"/>
                    <filter string="Gender" name="group_gender" context="{'group_by': 'gender'}"/>
                    <filter string="Age" name="group_age" context="{'group_by': 'age'}"/>
                    <filter string="Registration Date" name="group_registration" context="{'group_by': 'registration_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Child Subscription Form View -->
    <record id="view_child_subscription_form" model="ir.ui.view">
        <field name="name">kids.child.subscription.form</field>
        <field name="model">kids.child.subscription</field>
        <field name="arch" type="xml">
            <form string="Child Subscription">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,expired"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="child_id"/>
                            <field name="package_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="price" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="payment_status"/>
                            <field name="invoice_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Child Subscription List View -->
    <record id="view_child_subscription_list" model="ir.ui.view">
        <field name="name">kids.child.subscription.list</field>
        <field name="model">kids.child.subscription</field>
        <field name="arch" type="xml">
            <list string="Child Subscriptions">
                <field name="child_id"/>
                <field name="package_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state"/>
                <field name="payment_status"/>
                <field name="price"/>
                <field name="currency_id"/>
            </list>
        </field>
    </record>

    <!-- Actions for Children -->
    <record id="action_child" model="ir.actions.act_window">
        <field name="name">Children</field>
        <field name="res_model">kids.child</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your first child!
            </p>
            <p>
                Add children information for Kids Club membership.
            </p>
        </field>
    </record>

    <!-- Actions for Child Subscriptions -->
    <record id="action_child_subscription" model="ir.actions.act_window">
        <field name="name">Child Subscriptions</field>
        <field name="res_model">kids.child.subscription</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first child subscription!
            </p>
            <p>
                Manage subscription packages for children.
            </p>
        </field>
    </record>
</odoo>
