<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Child Form View -->
    <record id="view_child_form" model="ir.ui.view">
        <field name="name">kids.child.form</field>
        <field name="model">kids.child</field>
        <field name="arch" type="xml">
            <form string="Child Information">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_subscriptions" type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="subscription_count" widget="statinfo" string="Subscriptions"/>
                        </button>
                        <button name="action_view_checkins" type="object" class="oe_stat_button" icon="fa-clock-o">
                            <field name="checkin_ids" widget="statinfo" string="Check-ins"/>
                        </button>
                        <button name="action_open_checkin_wizard" type="object" class="oe_stat_button" icon="fa-sign-in"
                                invisible="is_checked_in">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">Check-in</span>
                                <span class="o_stat_text">Quick</span>
                            </div>
                        </button>
                        <button name="action_quick_checkout" type="object" class="oe_stat_button" icon="fa-sign-out"
                                invisible="not is_checked_in">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value text-danger">Checked In</span>
                                <span class="o_stat_text">Click to Check-out</span>
                            </div>
                        </button>
                    </div>
                    
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image_medium', 'size': [90, 90]}"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Child's Full Name"/>
                        </h1>
                        <h3>
                            <field name="barcode_id" readonly="1"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="parent_id" options="{'no_create': True}"/>
                            <field name="date_of_birth"/>
                            <field name="age" readonly="1"/>
                            <field name="gender"/>
                            <field name="registration_date"/>
                            <field name="active"/>
                        </group>
                        <group name="barcode_info" string="Identification">
                            <field name="barcode_image" widget="image" options="{'size': [200, 100]}" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Emergency Contact" name="emergency">
                            <group>
                                <group>
                                    <field name="emergency_contact"/>
                                    <field name="emergency_phone"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Medical Information" name="medical">
                            <group>
                                <field name="medical_notes" placeholder="Any medical conditions or special needs..."/>
                                <field name="allergies" placeholder="List any known allergies..."/>
                            </group>
                        </page>
                        
                        <page string="Subscriptions" name="subscriptions">
                            <field name="subscription_ids" readonly="1">
                                <list>
                                    <field name="package_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="remaining_days"/>
                                    <field name="total_visits_allowed"/>
                                    <field name="visits_used"/>
                                    <field name="remaining_visits"/>
                                    <field name="state"/>
                                    <field name="price"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Check-in History" name="checkins">
                            <field name="checkin_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="checkin_time"/>
                                    <field name="checkout_time"/>
                                    <field name="duration_minutes"/>
                                    <field name="extra_minutes"/>
                                    <field name="extra_charges"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Child List View -->
    <record id="view_child_list" model="ir.ui.view">
        <field name="name">kids.child.list</field>
        <field name="model">kids.child</field>
        <field name="arch" type="xml">
            <list string="Children">
                <field name="image_small" widget="image" options="{'size': [40, 40]}"/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="barcode_id"/>
                <field name="registration_date"/>
                <field name="current_subscription_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Child Search View -->
    <record id="view_child_search" model="ir.ui.view">
        <field name="name">kids.child.search</field>
        <field name="model">kids.child</field>
        <field name="arch" type="xml">
            <search string="Search Children">
                <field name="name" string="Child Name"/>
                <field name="parent_id" string="Parent"/>
                <field name="barcode_id" string="Barcode ID"/>
                <field name="age"/>
                
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                
                <separator/>
                <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                
                <separator/>
                <filter string="With Active Subscription" name="active_subscription" 
                        domain="[('current_subscription_id', '!=', False)]"/>
                <filter string="No Active Subscription" name="no_subscription" 
                        domain="[('current_subscription_id', '=', False)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Parent" name="group_parent" context="{'group_by': 'parent_id'}"/>
                    <filter string="Gender" name="group_gender" context="{'group_by': 'gender'}"/>
                    <filter string="Age" name="group_age" context="{'group_by': 'age'}"/>
                    <filter string="Registration Date" name="group_registration" context="{'group_by': 'registration_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Child Subscription Form View -->
    <record id="view_child_subscription_form" model="ir.ui.view">
        <field name="name">kids.child.subscription.form</field>
        <field name="model">kids.child.subscription</field>
        <field name="arch" type="xml">
            <form string="Child Subscription">
                <header>
                    <button name="action_confirm" type="object" 
                            string="Confirm" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_cancel" type="object" 
                            string="Cancel" class="btn-secondary"
                            invisible="state in ('draft', 'cancelled')"
                            confirm="Are you sure you want to cancel this subscription?"/>
                    <button name="action_check_payment_status" type="object" string="Check Payment Status" 
                            class="btn-secondary" 
                            invisible="state != 'confirmed'"
                            help="Manually check and update payment status"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,paid,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" 
                                name="action_view_sale_order" icon="fa-shopping-cart"
                                invisible="not sale_order_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View</span>
                                <span class="o_stat_text">Sale Order</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" 
                                name="action_view_invoices" icon="fa-file-text-o"
                                invisible="invoice_count == 0">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="invoice_count"/>
                                </span>
                                <span class="o_stat_text">Invoices</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" 
                                name="action_view_payments" icon="fa-money">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="payment_count"/>
                                </span>
                                <span class="o_stat_text">Payments</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="display_name"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group>
                            <field name="child_id" readonly="state != 'draft'"/>
                            <field name="start_date" readonly="state != 'draft'"/>
                            <field name="end_date" readonly="1"/>
                            <field name="remaining_days" readonly="1"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="activity_status" widget="badge" 
                                   decoration-success="is_active == True" 
                                   decoration-danger="is_active == False"/>
                            <field name="is_active" invisible="1"/>
                            <field name="total_price" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <group string="Visit Tracking">
                        <group>
                            <field name="total_visits_allowed" readonly="1"/>
                            <field name="visits_used" readonly="1"/>
                            <field name="remaining_visits" readonly="1"/>
                        </group>
                        <group>
                            <div class="alert alert-info" role="alert" invisible="remaining_visits &gt; 0">
                                <strong>No visits remaining!</strong> This subscription has been fully used.
                            </div>
                            <div class="alert alert-warning" role="alert" invisible="remaining_visits &gt; 5 or remaining_visits &lt;= 0">
                                <strong>Low visits remaining:</strong> Only <field name="remaining_visits" readonly="1"/> visits left.
                            </div>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Packages">
                            <group>
                                <field name="package_ids" widget="many2many_tags" 
                                       readonly="state != 'draft'"
                                       placeholder="Select packages..."/>
                            </group>
                            
                            <field name="package_ids" 
                                   readonly="state != 'draft'"
                                   invisible="not package_ids">
                                <list string="Selected Packages" editable="bottom">
                                    <field name="name"/>
                                    <field name="name_arabic"/>
                                    <field name="price" widget="monetary"/>
                                    <field name="number_of_visits"/>
                                    <field name="validity_days"/>
                                    <field name="currency_id" invisible="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Child Subscription List View -->
    <record id="view_child_subscription_list" model="ir.ui.view">
        <field name="name">kids.child.subscription.list</field>
        <field name="model">kids.child.subscription</field>
        <field name="arch" type="xml">
            <list string="Child Subscriptions">
                <field name="child_id"/>
                <field name="package_id" optional="hide"/>
                <field name="package_ids" widget="many2many_tags" optional="show"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="remaining_days"/>
                <field name="state"/>
                <field name="activity_status" widget="badge" decoration-success="activity_status == 'active'" decoration-danger="activity_status == 'inactive'"/>
                <field name="total_price" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
                <field name="sale_order_id" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Actions for Children -->
    <record id="action_child" model="ir.actions.act_window">
        <field name="name">Children</field>
        <field name="res_model">kids.child</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your first child!
            </p>
            <p>
                Add children information for Kids Club membership.
            </p>
        </field>
    </record>

    <!-- Actions for Child Subscriptions -->
    <record id="action_child_subscription" model="ir.actions.act_window">
        <field name="name">Child Subscriptions</field>
        <field name="res_model">kids.child.subscription</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first child subscription!
            </p>
            <p>
                Manage subscription packages for children.
            </p>
        </field>
    </record>



</odoo>
