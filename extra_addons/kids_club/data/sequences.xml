<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sequence for Child Barcode ID -->
    <record id="seq_child_barcode" model="ir.sequence">
        <field name="name">Child Barcode Sequence</field>
        <field name="code">kids.child.barcode</field>
        <field name="prefix">KC</field>
        <field name="padding">4</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Cron Job for Subscription Status Updates -->
    <record id="cron_update_subscription_status" model="ir.cron">
        <field name="name">Update Child Subscription Status</field>
        <field name="model_id" ref="model_kids_child_subscription"/>
        <field name="state">code</field>
        <field name="code">model._cron_update_subscription_status()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>
</odoo>
